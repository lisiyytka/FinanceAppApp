<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/entrance_txt_part"
            style="@style/linear_layout_height_zero_v"
            android:layout_weight="1">

            <TextView
                android:id="@+id/entrance_txt"
                style="@style/font_roboto_light_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Вход"
                android:textSize="50sp"
                android:layout_marginTop="100dp"/>

            <TextView
                android:id="@+id/login"
                style="@style/font_roboto_regular_blue"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:paddingHorizontal="20dp"
                android:layout_marginHorizontal="37dp"
                android:background="@drawable/operation_sum_bg"
                android:ems="5"
                android:inputType="text"
                android:textColorLink="@color/dark_blue"
                android:textCursorDrawable="@color/dark_blue"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/forget_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/font_roboto_regular_dark_gray"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/txt_gray"
                android:text="Войти в другой аккаунт"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/entrance_btn_part"
            style="@style/linear_layout_height_zero_v"
            android:layout_weight="1">

            <LinearLayout
                style="@style/linear_layout_height_zero_h"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/btn_1"
                    style="@style/codeBtn"
                    android:text="1"/>
                <TextView
                    android:id="@+id/btn_2"
                    style="@style/codeBtn"
                    android:text="2"/>
                <TextView
                    android:id="@+id/btn_3"
                    style="@style/codeBtn"
                    android:text="3"/>
            </LinearLayout>
            <LinearLayout
                style="@style/linear_layout_height_zero_h"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/btn_4"
                    style="@style/codeBtn"
                    android:text="4"/>
                <TextView
                    android:id="@+id/btn_5"
                    style="@style/codeBtn"
                    android:text="5"/>
                <TextView
                    android:id="@+id/btn_6"
                    style="@style/codeBtn"
                    android:text="6"/>
            </LinearLayout>
            <LinearLayout
                style="@style/linear_layout_height_zero_h"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/btn_7"
                    style="@style/codeBtn"
                    android:text="7"/>
                <TextView
                    android:id="@+id/btn_8"
                    style="@style/codeBtn"
                    android:text="8"/>
                <TextView
                    android:id="@+id/btn_9"
                    style="@style/codeBtn"
                    android:text="9"/>
            </LinearLayout>
            <LinearLayout
                style="@style/linear_layout_height_zero_h"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"/>
                <TextView
                    android:id="@+id/btn_0"
                    style="@style/codeBtn"
                    android:text="0"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/btn_delete"
                    style="@style/codeBtnIc"
                    android:layout_weight="1"
                    android:src="@drawable/ic_del"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>