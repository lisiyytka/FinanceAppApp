<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="linear_layout_height_zero_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linear_layout_width_zero_h">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linear_layout_height_zero_v">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linear_layout_width_zero_v">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="font_roboto_medium_white">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="font_roboto_regular_white">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="font_roboto_regular_blue">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="font_roboto_light_blue">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="font_roboto_regular_dark_gray">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="operation_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="img_cat">
        <item name="android:layout_width">78dp</item>
        <item name="android:layout_height">78dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginEnd">7dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">@drawable/border_img_cat</item>
    </style>

    <style name="reg">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/operation_sum_bg</item>
        <item name="android:ems">10</item>
        <item name="android:textColorLink">@color/dark_blue</item>
        <item name="android:textCursorDrawable">@color/dark_blue</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>